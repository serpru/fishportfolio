@page "/"

@using fishportfolio.Pages.Components
@inject NavigationManager NavigationManager

<PageTitle>Index</PageTitle>
@*Body*@

<MudContainer MaxWidth="MaxWidth.Large">
    <MudPaper Class="px-8 py-4 my-3" Elevation="2">
        <Fishcrumbs />
        <MudText Color="Color.Primary" Align="Align.Left" Typo="Typo.h1">Welcome!</MudText>
        <MudText Color="Color.Primary" Align="Align.Left" Typo="Typo.body1">
            Nice to meet you! I am an Information and Communications Technology (ICT in short) student from Poland 🇵🇱. I like to tinker with many different projects.
            Feel free to explore my page in search for my completed projects and more info about me 🙂
        </MudText>
        <MudContainer MaxWidth="MaxWidth.ExtraSmall">
            <MudImage Class="mt-2" Fluid="true" ObjectFit="ObjectFit.Fill" Elevation="2" Src="./images/placeholder-image.jpg" ObjectPosition="ObjectPosition.Center"></MudImage>
            <MudText Class="mb-2" Color="Color.Primary" Align="Align.Center" Typo="Typo.body2">Sample description.</MudText>
        </MudContainer>
        <MudText Color="Color.Primary" Align="Align.Left" Typo="Typo.body1">That's a very neat seal picture, isn't it? 😉</MudText>

        <MudGrid Justify="Justify.Center">
            <MudItem Class="pb-0" xs="12">
                <MudText Color="Color.Primary" Align="Align.Left" Typo="Typo.h1">Other sites you can find me on:</MudText>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudCard Outlined="true">
                    <MudCardContent Class="pb-0">
                        <MudIcon Icon="@Icons.Custom.Brands.GitHub"></MudIcon>
                        <MudText>GitHub</MudText>
                        <MudText Typo="Typo.body2">Check the source code of this site, and more, on my GitHub!</MudText>
                    </MudCardContent>
                    <MudCardActions Class="pt-0">
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudCard Outlined="true">
                    <MudCardContent Class="pb-0">
                        <MudIcon Icon="@Icons.Custom.Brands.Twitter"></MudIcon>
                        <MudText>Twitter</MudText>
                        <MudText Typo="Typo.body2">I usually retweet other people's awesome work. Or cat videos. Go see them!</MudText>
                    </MudCardContent>
                    <MudCardActions Class="pt-0">
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudCard Outlined="true">
                    <MudCardContent Class="pb-0">
                        <MudIcon Icon="@Icons.Filled.Email"></MudIcon>
                        <MudText>E-mail</MudText>
                        <MudText Typo="Typo.body2">For business inquires, consider writing an e-mail to me!</MudText>
                    </MudCardContent>
                    <MudCardActions Class="pt-0">
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>

    </MudPaper>
</MudContainer>



